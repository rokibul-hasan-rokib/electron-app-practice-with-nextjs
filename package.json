{
  "name": "my-electron-app",
  "version": "0.1.0",
  "private": true,
  "main": "electron/main.js",
  "scripts": {
    "dev": "concurrently \"next dev --turbopack\" \"wait-on http://localhost:3000 && electron .\"",
    "build": "next build && next export",
    "start": "next start",
    "lint": "eslint",
    "dist": "npm run build && electron-builder"
  },
  "dependencies": {
    "next": "15.5.2",
    "react": "19.1.0",
    "react-dom": "19.1.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "concurrently": "^9.2.1",
    "cross-env": "^10.0.0",
    "electron": "^38.0.0",
    "electron-builder": "^26.0.12",
    "eslint": "^9",
    "eslint-config-next": "15.5.2",
    "tailwindcss": "^4",
    "wait-on": "^8.0.4"
  },
  "build": {
    "appId": "com.example.myapp",
    "files": [
      "electron",
      "out"
    ],
    "directories": {
      "buildResources": "assets"
    }
  }
}
